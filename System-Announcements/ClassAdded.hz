Class
	name: #ClassAdded;
	superclass: #ClassSystemAnnouncement;
	instanceSpecification: #(#pointers #words );
	instanceVariables: #(#classAdded #classCategory );
	classVariables: #();
	package: #'System-Announcements'.

Class ClassAdded >> classAdded
[
^ classAdded
]

Class ClassAdded >> classAdded: aClass
[
classAdded := aClass
]

Class ClassAdded >> classAffected
[
^ self classAdded
]

Class ClassAdded >> classCategory
[
^ classCategory
]

Class ClassAdded >> classCategory: aClassCategoryName
[
classCategory := aClassCategoryName
]

Metaclass
	name: #ClassAdded;
	instanceVariables: #().

Metaclass ClassAdded >> class: aClass category: aClassCategoryName
[
^ self new	classAdded: aClass;	classCategory: aClassCategoryName;	yourself
]

