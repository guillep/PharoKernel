Class String >> regex: rxString matchesCollect: aBlock
[
^ rxString asRegex matchesIn: self collect: aBlock
]

Class String >> search: aString
[
	"compatibility method to make regexp and strings work polymorphicly"
^ aString includesSubString: self
]

Class String >> allRangesOfRegexMatches: rxString
[
^ rxString asRegex matchingRangesIn: self
]

Class String >> copyWithRegex: rxString matchesTranslatedUsing: aBlock
[
^ rxString asRegex copy: self translatingMatchesUsing: aBlock
]

