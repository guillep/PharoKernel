[
	| key simulator |
	key := primitiveIndex = 117
		ifTrue: [ | lit |
			lit := method literalAt: 1.
			{"prim name, module name "
			(lit second).
			(lit first)}	"prim name, module name " ]
		ifFalse: [ primitiveIndex ].
	simulator := self class specialPrimitiveSimulators
		at: key
		ifAbsent: [ 
			^ primitiveIndex = 117
				ifTrue: [ 
					self withoutPrimitiveTryNamedPrimitiveIn: method for: receiver withArgs: arguments	"this using primitive 218, which doesn't works as expected... 					self tryNamedPrimitiveIn: method for: receiver withArgs: arguments " ]
