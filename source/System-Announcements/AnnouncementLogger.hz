Class
	name: #AnnouncementLogger;
	superclass: #ClassObject;
	instanceSpecification: #(#pointers #words );
	instanceVariables: #();
	classVariables: #();
	package: #'System-Announcements'.

Class AnnouncementLogger >> logAnnouncement: ann
[
Transcript	show: ann printString;	cr
]

Class AnnouncementLogger >> subscribeTo: anAnnouncer
[
anAnnouncer on: Announcement send: #logAnnouncement: to: self	"weak"
]

Metaclass
	name: #AnnouncementLogger;
	instanceVariables: #().

