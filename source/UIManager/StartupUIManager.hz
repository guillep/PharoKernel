StartupUIManager
	superclass: #NonInteractiveUIManager;
	package: #UIManager.

StartupUIManager >> activate
activate
	"override to exclude the superclass' behavior"

	

StartupUIManager >> deactivate
deactivate
	"override to exclude the superclass' behavior"

	

StartupUIManager >> inform: aString
inform: aString
	(ProvideAnswerNotification signal: aString) ifNotNil: [ :answer | ^ true ].
	Smalltalk addDeferredStartupAction: [ UIManager default inform: aString ]

