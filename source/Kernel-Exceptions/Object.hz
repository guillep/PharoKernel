Object >> halt
[
	"This is the typical message to use for inserting breakpoints during debugging."

	Halt now
]

Object >> halt: aString
[
	Halt now: aString
]

Object >> haltIf: condition
[
	Halt if: condition
]

Object >> haltIfShiftPressed
[
	Halt ifShiftPressed
]

Object >> haltOnCount: anInteger
[
	Halt onCount: anInteger
]

Object >> haltOnce
[
	Halt once
]

