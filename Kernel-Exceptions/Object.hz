Class Object >> halt
[
	"This is the typical message to use for inserting breakpoints during debugging."
Halt now
]

Class Object >> halt: aString
[
Halt now: aString
]

Class Object >> haltIf: condition
[
Halt if: condition
]

Class Object >> haltIfShiftPressed
[
Halt ifShiftPressed
]

Class Object >> haltOnCount: anInteger
[
Halt onCount: anInteger
]

Class Object >> haltOnce
[
Halt once
]

