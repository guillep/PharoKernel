Class
	name: #PragmaAnnouncement;
	superclass: #ClassAnnouncement;
	instanceSpecification: #(#pointers #words );
	instanceVariables: #(#pragma );
	classVariables: #();
	package: #'Kernel-Pragmas'.

Class PragmaAnnouncement >> pragma: aPragma
[
pragma := aPragma
]

Class PragmaAnnouncement >> pragma
[
^ pragma
]

Metaclass
	name: #PragmaAnnouncement;
	instanceVariables: #().

Metaclass PragmaAnnouncement >> pragma: aPragma
[
^ self new pragma: aPragma
]

